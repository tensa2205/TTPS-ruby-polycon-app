<%= form_with(model: professional) do |form| %>
  <% if professional.errors.any? %>
    <div id="error_explanation">
      <h2><%= professional.errors.count %> error prohibe que este profesional se guarde:</h2>

      <ul>
        <% professional.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3">
    <%= form.label "Nombre completo: ", class: "form-label col-1", style: "margin-left: 25px"%>
    <%= form.text_field :full_name, class: "col-3" %>
  </div>

  <div class="actions">
    <%= form.submit "Guardar", class:'btn btn-primary', style: "margin-left: 25px" %>
  </div>
<% end %>
