<%= form_with(scope: :session, url: login_path) do |f| %>

<div class="form-group">
  <%= f.label :name %><br/>
  <%= f.text_field :name, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :password %><br/>
  <%= f.password_field :password, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.submit "Log in", class: "btn btn-primary" %>
</div>

<% end %>
