<%= form_with(model: [professional, appointment]) do |form| %>
  <% if appointment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(appointment.errors.count, "errores") %> prohiben que este turno se guarde:</h2>

      <ul>
        <% appointment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="alert alert-info" role="alert">
  Tener en cuenta: los turnos se dan en bloques de 30 minutos (00 y 30).
</div>
<div style="margin-top: 100px  ">

  <div class="field mb-3">
    <%= form.label "Nombre del paciente: ", class: "form-label col-1", style: "margin-left: 25px" %>
    <%= form.text_field :first_name, class: "col-3" %>
  </div>

  <div class="field mb-3">
    <%= form.label "Apellido del paciente: ", class: "form-label col-1", style: "margin-left: 25px" %>
    <%= form.text_field :last_name, class: "col-3" %>
  </div>

  <div class="field mb-3">
    <%= form.label "Telefono del paciente: ", class: "form-label col-1", style: "margin-left: 25px" %>
    <%= form.text_field :phone, class: "col-3" %>
  </div>

  <div class="field mb-3">
    <%= form.label "Notas adicionales del turno: ", class: "form-label col-1", style: "margin-left: 25px" %>
    <%= form.text_field :note, class: "col-3" %>
  </div>

  <div class="field mb-3">
    <%= form.label "Fecha/Hora del turno: ", class: "form-label col-1", style: "margin-left: 25px" %>
    <%= form.text_field :date,
    data: {
      controller: "flatpickr",
      flatpickr_date_format: "Y-m-d H:i",
      flatpickr_min_date: Time.zone.now,
      flatpickr_enable_time: true,
      flatpickr_time_24hr: true,
      flatpickr_min_time: "08:00",
      flatpickr_max_time: "17:30",
      flatpickr_minute_increment: "30"
    } %>
  </div>

  <div class="actions">
    <%= form.submit "Guardar", class:'btn btn-primary', style: "margin-left: 25px"  %>
  </div>
</div>
<% end %>
