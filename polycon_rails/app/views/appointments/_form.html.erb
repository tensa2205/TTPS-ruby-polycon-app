<%= form_with(model: [professional, appointment]) do |form| %>
  <% if appointment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

      <ul>
        <% appointment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3">
    <%= form.label :first_name, class: "form-label col-1", style: "margin-left: 25px" %>
    <%= form.text_field :first_name, class: "col-3" %>
  </div>

  <div class="field mb-3">
    <%= form.label :last_name, class: "form-label col-1", style: "margin-left: 25px" %>
    <%= form.text_field :last_name, class: "col-3" %>
  </div>

  <div class="field mb-3">
    <%= form.label :phone, class: "form-label col-1", style: "margin-left: 25px" %>
    <%= form.text_field :phone, class: "col-3" %>
  </div>

  <div class="field mb-3">
    <%= form.label :note, class: "form-label col-1", style: "margin-left: 25px" %>
    <%= form.text_field :note, class: "col-3" %>
  </div>

  <div class="field mb-3">
    <%= form.label :date, class: "form-label col-1", style: "margin-left: 25px" %>
    <%= form.datetime_select :date, class: "col-3" %>
  </div>

  <div class="actions">
    <%= form.submit "Guardar", class:'btn btn-primary', style: "margin-left: 25px"  %>
  </div>
<% end %>
